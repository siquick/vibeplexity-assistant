{
  "name": "vibeplexity",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run index.ts",
    "cli": "bun run cli.ts",
    "server": "bun run src/server/main-server.ts",
    "dev:server": "bun --watch src/server/main-server.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "db:reset": "rm -f orin.db && bun run db:migrate",
    "build": "bun build index.ts --outdir dist",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.11",
    "@ai-sdk/openai": "^2.0.23",
    "@hono/node-server": "^1.19.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@purepageio/fetch-engines": "^0.5.0",
    "ai": "^5.0.30",
    "better-auth": "^1.3.8",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.5",
    "exa-js": "^1.9.3",
    "hono": "^4.9.6",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
